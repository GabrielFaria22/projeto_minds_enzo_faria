<div class="main-panel">
  <div class="jumbotron jumbotron-sm">
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-lg-12">
          <h1 class="h1"><b><%= @user.username %></b></h1>
        </div>
      </div>
    </div>
  </div>
  <div class="container">


    <h3>Dados do Assistente   <%= link_to 'Editar', edit_user_path(@user), class: 'btn btn-primary btn-sm' %></h3>


    <table class="table table-hover table-sm table-properties">
        <tr>
          <th>ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>Nome</th>
          <td><%= @user.username %></td>
        </tr>
        <tr>
          <th>Email</th>
          <td><%= @user.email %></td>
        </tr>
      </table>

      <br>
      <h2>Registros</h2>
      <% if @user.posts.any? %>
      <%= @user.posts.each do |post| %>
        <div class="container-fluid p-3 my-3 border">
          <h2><%= post.title %></h2>
          <footer>
            Criado por <%= post.user.username %> - ID <%= post.user.id %> em <%= post.formatted_date %>
          </footer>
          <br>
          <pre>
            <%= simple_format(post.body) %>
          </pre>
        </div>
      <% end %>
    <% else %>
      <p>Sem registros</p>
    <% end %>



  </div>
