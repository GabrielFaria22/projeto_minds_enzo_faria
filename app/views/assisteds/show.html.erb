<% if @assisted.posts.any? %>
  <%= @assisted.posts.each do |post| %>
    <div>
      <%= post.user.username %> ID <%= post.user.id %>
      Criado em <%= post.created_at %>
      <br><%= post.title %>
      <%= simple_format(post.body) %>
    </div>
  <% end %>
<% else %>
  <p>Sem registros</p>
<% end %>



