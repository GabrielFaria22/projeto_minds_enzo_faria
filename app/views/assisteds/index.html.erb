<h1>Assisteds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Address</th>
      <th>Name mother</th>
      <th>Name father</th>
      <th>Phone1</th>
      <th>Phone2</th>
      <th>Email</th>
      <th>Observation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assisteds.each do |assisted| %>
      <tr>
        <td><%= assisted.name %></td>
        <td><%= assisted.gender %></td>
        <td><%= assisted.address %></td>
        <td><%= assisted.name_mother %></td>
        <td><%= assisted.name_father %></td>
        <td><%= assisted.phone1 %></td>
        <td><%= assisted.phone2 %></td>
        <td><%= assisted.email %></td>
        <td><%= assisted.observation %></td>
        <td><%= link_to 'Show', assisted %></td>
        <td><%= link_to 'Edit', edit_assisted_path(assisted) %></td>
        <td><%= link_to 'Destroy', assisted, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

