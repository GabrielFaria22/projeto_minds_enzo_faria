<%= form_with(model: assisted, local: true) do |form| %>
  <% if assisted.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assisted.errors.count, "error") %> prohibited this assisted from being saved:</h2>

      <ul>
      <% assisted.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="main-panel">
    <div class="jumbotron jumbotron-sm">
      <div class="container">
        <div class="row">
          <div class="col-sm-12 col-lg-12">
            <h1 class="h1"><b>Perfil do Usuário</b></h1>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="well well-sm">
            <form>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= form.text_field :name, class: 'form-control', placeholder: 'Nome', required: true %>
                </div>
                <div class="form-group">
                  <%= form.select :gender, [['Masculino', true], ['Feminino', false]], required: true %>
                </div>
                <div class="form-group">
                  <%= form.text_field :address, class: 'form-control', placeholder: 'Endereço', required: true %>
                </div>
                <div class="form-group">
                  <%= form.text_field :name_mother, class: 'form-control', placeholder: 'Nome da mãe', required: true %>
                </div>
                <div class="form-group">
                  <%= form.text_field :name_father, class: 'form-control', placeholder: 'Nome do pai', required: true %>
                </div>
                <div class="form-group">
                  <%= form.text_field :cpf, class: 'form-control', placeholder: 'CPF', required: true %>
                </div>
                <div class="form-group">
                  <%= form.select :status, [['ativo', true], ['inativo', false]], prompt: 'Selecione o status', required: true %>
                </div>
                <div class="form-group">
                  <%= form.number_field :phone1, class: 'form-control', placeholder: 'Telefone 1', required: true %>
                </div>
                <div class="form-group">
                  <%= form.number_field :phone2, class: 'form-control', placeholder: 'Telefone 2' %>
                </div>
                <div class="form-group">
                  <%= form.text_field :email, class: 'form-control', placeholder: 'Email', required: true %>
                </div>
                <div class="form-group">
                  <%= form.text_area :observation, class: 'form-control', placeholder: 'Observação' %>
                </div>
                  <%= form.submit 'Confirmar', class: 'btn btn-primary' %>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <br><br>
<% end %>
